{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,

    // Allow `import React from "react"` on CJS modules
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Node‐style resolution so TS sees node_modules
    "moduleResolution": "node",

    // This makes `@/...` → `src/...` work
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"]
}
